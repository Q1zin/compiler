{
  "name": "compiler",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "antler:generate": "rm -rf src/antler/generated && mkdir -p src/antler/generated && cd src/antler/grammar && antlr4ts -visitor -no-listener -o ../generated FortranLogical.g4 && cd ../../.. && node scripts/patch-antler-generated.mjs",
    "dev": "npm run antler:generate && vite",
    "build": "npm run antler:generate && vue-tsc --noEmit && vite build",
    "postinstall": "npm run antler:generate",
    "preview": "vite preview",
    "tauri": "tauri"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-dialog": "~2",
    "@tauri-apps/plugin-fs": "~2",
    "@tauri-apps/plugin-opener": "^2",
    "antlr4ts": "0.5.0-alpha.4",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.16",
    "@tauri-apps/cli": "^2",
    "@vitejs/plugin-vue": "^5.2.1",
    "antlr4ts-cli": "0.5.0-alpha.4",
    "autoprefixer": "^10.4.21",
    "tailwindcss": "^4.1.13",
    "typescript": "~5.6.2",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vite": "^6.0.3",
    "vue-tsc": "^2.1.10"
  }
}
