{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",

    "fs:allow-read-text-file",
    "fs:allow-read-file",

    "opener:allow-open-path",
    "opener:allow-reveal-item-in-dir"
  ],
  "allow": [
    { "path": "$DOCUMENT/*" },
    { "path": "$DOWNLOAD/*" }
  ]
}